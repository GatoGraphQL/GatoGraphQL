{
    "name": "pop-schema/post-categories",
    "type": "library",
    "description": "Adds support for post categories",
    "keywords": ["PoP", "post-categories"],
    "homepage": "https://github.com/PoPSchema/post-categories",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "require": {
        "php": "^8.0",
        "pop-schema/categories": "^0.9",
        "pop-schema/posts": "^0.9"
    },
    "require-dev": {
        "getpop/api": "^0.9",
        "getpop/api-rest": "^0.9",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": ">=9.3",
        "rector/rector": "^0.12",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "suggest": {
        "getpop/api": "Integrates well with API",
        "getpop/api-rest": "Integrates well with REST API"
    },
    "autoload": {
        "psr-4": {
            "PoPSchema\\PostCategories\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoPSchema\\PostCategories\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.9-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
