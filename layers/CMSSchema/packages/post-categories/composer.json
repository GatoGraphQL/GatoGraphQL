{
    "name": "pop-cms-schema/post-categories",
    "type": "library",
    "description": "Adds support for post categories",
    "keywords": ["GraphQL", "PHP", "Gato", "GatoGraphQL", "post-categories"],
    "homepage": "https://github.com/PoPCMSSchema/post-categories",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "require": {
        "php": "^8.1",
        "pop-cms-schema/categories": "^0.11",
        "pop-cms-schema/posts": "^0.11"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^10.2",
        "pop-api/api": "^0.11",
        "pop-api/api-rest": "^0.11",
        "rector/rector": "^0.17.8",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "suggest": {
        "pop-api/api": "Integration with API",
        "pop-api/api-rest": "Integration with REST API"
    },
    "autoload": {
        "psr-4": {
            "PoPCMSSchema\\PostCategories\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoPCMSSchema\\PostCategories\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.11-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
