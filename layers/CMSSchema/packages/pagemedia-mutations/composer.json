{
    "name": "pop-cms-schema/pagemedia-mutations",
    "type": "library",
    "description": "Adds support for media mutations on pages",
    "keywords": ["GraphQL", "PHP", "PoP", "pagemedia-mutations"],
    "homepage": "https://github.com/PoPCMSSchema/pagemedia-mutations",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "require": {
        "php": "^8.1",
        "pop-cms-schema/custompostmedia-mutations": "^0.9",
        "pop-cms-schema/page-mutations": "^0.9"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^9.5",
        "rector/rector": "^0.15",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "PoPCMSSchema\\PageMediaMutations\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoPCMSSchema\\PageMediaMutations\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.9-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {}
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
