{
    "name": "pop-schema/taxonomyquery",
    "type": "library",
    "description": "Adds support for taxonomy (category and tag) queries",
    "keywords": [
        "PoP",
        "taxonomyquery"
    ],
    "homepage": "https://github.com/PoPSchema/taxonomyquery",
    "license": "MIT",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "pop-schema/taxonomymeta": "dev-master",
        "pop-schema/migrate-taxonomyquery": "dev-master"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": ">=9.3",
        "rector/rector": "^0.8.17",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "PoPSchema\\TaxonomyQuery\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoPSchema\\TaxonomyQuery\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse -c phpstan.neon.dist",
        "downgrade-code": "rector process --dry-run --ansi"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
