{
    "name": "pop-schema/taxonomyquery",
    "type": "library",
    "description": "Adds support for taxonomy (category and tag) queries",
    "keywords": ["PoP", "taxonomyquery"],
    "homepage": "https://github.com/PoPSchema/taxonomyquery",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "pop-schema/taxonomymeta": "^0.8",
        "pop-schema/migrate-taxonomyquery": "^0.8"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12, <0.12.70",
        "phpunit/phpunit": ">=9.3",
        "rector/rector": "^0.9",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "PoPSchema\\TaxonomyQuery\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoPSchema\\TaxonomyQuery\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse",
        "preview-code-downgrade": "rector process src --config=rector-downgrade-code.php --dry-run --ansi"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.8-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
