<?xml version="1.0"?>
<ruleset name="user-avatars-wp">
    <description>The coding standard of user-avatars-wp package</description>
    <arg value="p" />

    <config name="ignore_warnings_on_exit" value="1" />

    <!-- Don't show a warning on the line length -->
    <rule ref="Generic.Files.LineLength.MaxExceeded">
        <severity>0</severity>
    </rule>

    <arg name="colors" />
    <arg value="s" />

    <!-- Use the PSR12 Standard-->
    <rule ref="PSR12" />
</ruleset>
