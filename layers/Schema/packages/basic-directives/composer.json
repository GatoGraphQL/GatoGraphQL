{
    "name": "pop-schema/basic-directives",
    "type": "library",
    "description": "Set of basic directives",
    "keywords": ["PoP", "basic-directives"],
    "homepage": "https://github.com/pop-schema/basic-directives",
    "license": "MIT",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "getpop/engine": "^0.7.9",
        "pop-schema/schema-commons": "^0.7.9"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12, <0.12.70",
        "phpunit/phpunit": ">=9.3",
        "rector/rector": "^0.9",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "PoPSchema\\BasicDirectives\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoPSchema\\BasicDirectives\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse",
        "preview-code-downgrade": "rector process src --config=rector-downgrade-code.php --dry-run --ansi"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.8-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
