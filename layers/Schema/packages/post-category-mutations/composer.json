{
    "name": "pop-schema/post-category-mutations",
    "type": "library",
    "description": "Add categories to posts",
    "keywords": ["PoP", "post-category-mutations"],
    "homepage": "https://github.com/PoPSchema/post-category-mutations",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "pop-schema/custompost-category-mutations": "^0.9",
        "pop-schema/post-mutations": "^0.9",
        "pop-schema/post-categories": "^0.9"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.76",
        "phpunit/phpunit": ">=9.3",
        "rector/rector": "^0.11",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "PoPSchema\\PostCategoryMutations\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoPSchema\\PostCategoryMutations\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.9-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
