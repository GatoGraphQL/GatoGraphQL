{
    "name": "pop-schema/user-roles-access-control",
    "type": "library",
    "description": "Access Control based on the user having a given role/capability",
    "keywords": ["PoP", "UserRolesAccessControl"],
    "homepage": "https://github.com/pop-schema/user-roles-access-control",
    "license": "MIT",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "pop-schema/user-roles": "^0.7.8",
        "pop-schema/user-state-access-control": "^0.7.8"
    },
    "require-dev": {
        "getpop/cache-control": "^0.7.8",
        "phpstan/phpstan": "^0.12, <0.12.70",
        "phpunit/phpunit": ">=9.3",
        "rector/rector": "^0.9",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "suggest": {
        "getpop/cache-control": "Integrates well with Cache Control"
    },
    "autoload": {
        "psr-4": {
            "PoPSchema\\UserRolesAccessControl\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoPSchema\\UserRolesAccessControl\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse",
        "preview-code-downgrade": "rector process src --config=rector-downgrade-code.php --dry-run --ansi"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.8-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
