{
    "name": "pop-schema/user-roles-wp",
    "type": "library",
    "description": "Implementation for WordPress of contracts from package \"User Roles\"",
    "keywords": ["PoP", "user-roles-wp"],
    "homepage": "https://github.com/pop-schema/user-roles-wp",
    "license": "MIT",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "pop-schema/user-roles": "dev-master",
        "pop-schema/users-wp": "dev-master"
    },
    "require-dev": {
        "pop-schema/user-state-wp": "dev-master",
        "phpunit/phpunit": ">=9.3",
        "rector/rector": "^0.9",
        "squizlabs/php_codesniffer": "^3.0",
        "szepeviktor/phpstan-wordpress": "^0.6.2",
        "johnpbloch/wordpress": ">=5.5"
    },
    "suggest": {
        "pop-schema/user-state-wp": "Integration with User State"
    },
    "autoload": {
        "psr-4": {
            "PoPSchema\\UserRolesWP\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoPSchema\\UserRolesWP\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse -c phpstan.neon.dist",
        "preview-code-downgrade": "rector process --config=rector-downgrade-code.php --dry-run --ansi"
    },
    "extra": {
        "wordpress-install-dir": "vendor/wordpress/wordpress",
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
