{
    "name": "graphql-by-pop/graphql-query",
    "type": "library",
    "description": "Utilities to transform the query from the GraphQL syntax to the Field query syntax",
    "keywords": ["PoP", "graphql-query"],
    "homepage": "https://github.com/GraphQLByPoP/graphql-query",
    "license": "MIT",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "getpop/field-query": "^0.7.7",
        "getpop/engine": "^0.7.7",
        "getpop/api-graphql": "^0.7.7",
        "graphql-by-pop/graphql-parser": "^0.7.7"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": ">=9.3",
        "rector/rector": "^0.9",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "GraphQLByPoP\\GraphQLQuery\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GraphQLByPoP\\GraphQLQuery\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse",
        "preview-code-downgrade": "rector process src --config=rector-downgrade-code.php --dry-run --ansi"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.8-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
