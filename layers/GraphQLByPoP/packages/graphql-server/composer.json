{
    "name": "graphql-by-pop/graphql-server",
    "type": "library",
    "description": "GraphQL server in PHP, implemented through the PoP API",
    "keywords": ["Gato", "GatoGraphQL", "GraphQL", "PHP", "Gato", "GatoGraphQL", "graphql", "server"],
    "homepage": "https://github.com/GraphQLByPoP/graphql-server",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "require": {
        "php": "^8.1",
        "graphql-by-pop/graphql-request": "^0.11"
    },
    "require-dev": {
        "getpop/access-control": "^0.11",
        "getpop/cache-control": "^0.11",
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^10.2",
        "rector/rector": "^0.18",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "suggest": {
        "getpop/access-control": "Integration with Access Control",
        "getpop/cache-control": "Integration with Cache Control"
    },
    "autoload": {
        "psr-4": {
            "GraphQLByPoP\\GraphQLServer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GraphQLByPoP\\GraphQLServer\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.11-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
