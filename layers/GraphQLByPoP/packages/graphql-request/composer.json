{
    "name": "graphql-by-pop/graphql-request",
    "type": "library",
    "description": "Enables GraphQL for PoP to process the GraphQL query using the standard syntax",
    "keywords": ["PoP", "graphql-request"],
    "homepage": "https://github.com/GraphQLByPoP/graphql-request",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "graphql-by-pop/graphql-query": "^0.8"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.76",
        "phpunit/phpunit": ">=9.3",
        "rector/rector": "^0.10",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "GraphQLByPoP\\GraphQLRequest\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GraphQLByPoP\\GraphQLRequest\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.8-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
