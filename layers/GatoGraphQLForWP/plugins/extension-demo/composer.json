{
    "name": "gato-graphql/extension-demo",
    "type": "library",
    "description": "Demonstration of extending the GraphQL schema, for Gato GraphQL",
    "keywords": ["GraphQL", "PHP", "WordPress", "GraphQL", "API"],
    "homepage": "https://github.com/GatoGraphQL/extension-demo",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "require": {
        "php": "^8.1",
        "pop-schema/schema-commons": "^0.11"
    },
    "require-dev": {
        "gato-graphql/gato-graphql": "^0.11",
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^10.2",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "GatoGraphQL\\ExtensionDemo\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GatoGraphQL\\ExtensionDemo\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "phpstan": "phpstan analyse -l 8 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.11-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "replace": {
        "getpop/component-model": "^0.11",
        "getpop/componentrouting": "^0.11",
        "getpop/definitions": "^0.11",
        "getpop/engine": "^0.11",
        "getpop/loosecontracts": "^0.11",
        "getpop/mandatory-directives-by-configuration": "^0.11",
        "getpop/root": "^0.11",
        "pop-cms-schema/schema-commons": "^0.11",
        "pop-schema/schema-commons": "^0.11"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
