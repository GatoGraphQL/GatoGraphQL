{
    "name": "getpop/resourceloader",
    "type": "library",
    "description": "Load resources for the website",
    "keywords": ["PoP", "resourceloader"],
    "homepage": "https://github.com/getpop/resourceloader",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "getpop/resources": "^0.8.1"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.76",
        "phpunit/phpunit": ">=9.3",
        "rector/rector": "^0.11",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "PoP\\ResourceLoader\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoP\\ResourceLoader\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.9-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
