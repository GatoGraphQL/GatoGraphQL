{
    "name": "getpop/site",
    "type": "library",
    "description": "Create a component-based website",
    "keywords": ["PoP", "site"],
    "homepage": "https://github.com/getpop/site",
    "license": "MIT",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "getpop/application": "^0.7.10",
        "getpop/definitions-base36": "^0.7.10",
        "getpop/resourceloader": "^0.7.10"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12, <0.12.70",
        "phpunit/phpunit": ">=9.3",
        "rector/rector": "^0.9",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "PoP\\Site\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoP\\Site\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse",
        "preview-code-downgrade": "rector process src --config=rector-downgrade-code.php --dry-run --ansi"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.8-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
