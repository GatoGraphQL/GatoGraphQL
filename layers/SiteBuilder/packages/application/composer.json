{
    "name": "getpop/application",
    "type": "library",
    "description": "Create a component-based application",
    "keywords": ["PoP", "application"],
    "homepage": "https://github.com/getpop/application",
    "license": "MIT",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "getpop/component-model-configuration": "^0.7.6",
        "getpop/api": "^0.7.6",
        "getpop/definitions-emoji": "^0.7.6",
        "getpop/definitionpersistence": "^0.7.6"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": ">=9.3",
        "rector/rector": "^0.9",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "PoP\\Application\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoP\\Application\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse -c phpstan.neon.dist",
        "preview-code-downgrade": "rector process src --config=rector-downgrade-code.php --dry-run --ansi"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.8-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
