{
    "name": "pop-wp-schema/comments",
    "type": "library",
    "description": "WordPress-specific Comment data model",
    "keywords": ["GraphQL", "PHP", "Gato", "GatoGraphQL", "WP", "comments"],
    "homepage": "https://github.com/PoPWPSchema/comments",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "require": {
        "php": "^8.1",
        "pop-cms-schema/comments-wp": "^0.11",
        "pop-wp-schema/schema-commons": "^0.11"
    },
    "require-dev": {
        "johnpbloch/wordpress": ">=5.5",
        "phpunit/phpunit": "^10.2",
        "rector/rector": "^0.17.8",
        "squizlabs/php_codesniffer": "^3.6",
        "szepeviktor/phpstan-wordpress": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "PoPWPSchema\\Comments\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoPWPSchema\\Comments\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse"
    },
    "extra": {
        "wordpress-install-dir": "vendor/wordpress/wordpress",
        "branch-alias": {
            "dev-master": "0.11-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
