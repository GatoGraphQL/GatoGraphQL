{
    "name": "pop-wp-schema/commentmeta",
    "type": "library",
    "description": "WordPress-specific Comment Meta data model",
    "keywords": ["PoP", "WP", "commentmeta"],
    "homepage": "https://github.com/PoPWPSchema/commentmeta",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "require": {
        "php": "^8.0",
        "pop-cms-schema/commentmeta-wp": "^0.9",
        "pop-wp-schema/comments": "^0.9",
        "pop-wp-schema/meta": "^0.9"
    },
    "require-dev": {
        "johnpbloch/wordpress": ">=5.5",
        "phpunit/phpunit": ">=9.3",
        "rector/rector": "^0.12",
        "squizlabs/php_codesniffer": "^3.0",
        "szepeviktor/phpstan-wordpress": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "PoPWPSchema\\CommentMeta\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoPWPSchema\\CommentMeta\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse"
    },
    "extra": {
        "wordpress-install-dir": "vendor/wordpress/wordpress",
        "branch-alias": {
            "dev-master": "0.9-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
