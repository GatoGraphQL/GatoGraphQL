{
    "name": "getpop/root-wp",
    "autoload": {
        "psr-4": {
            "PoP\\RootWP\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoP\\RootWP\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse"
    },
    "extra": {
        "wordpress-install-dir": "vendor/wordpress/wordpress",
        "branch-alias": {
            "dev-master": "0.9-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
