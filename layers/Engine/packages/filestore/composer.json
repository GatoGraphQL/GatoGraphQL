{
    "name": "getpop/filestore",
    "type": "library",
    "description": "Base classes to save files to disk, read them and reference them through an URL",
    "keywords": ["GraphQL", "PHP", "Gato", "GatoGraphQL", "file", "store"],
    "homepage": "https://github.com/getpop/filestore",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "require": {
        "php": "^8.1",
        "getpop/root": "^0.11"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^9.5",
        "rector/rector": "^0.17",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "PoP\\FileStore\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoP\\FileStore\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.11-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
