{
    "name": "getpop/hooks-wp",
    "type": "library",
    "description": "WordPress implementation of the contracts to implement hooks (filters and actions) for PoP",
    "keywords": ["PoP", "hooks", "WordPress"],
    "homepage": "https://github.com/getpop/hooks-wp",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "getpop/hooks": "^0.8.1",
        "getpop/translation-wp": "^0.8.1"
    },
    "require-dev": {
        "phpunit/phpunit": ">=9.3",
        "rector/rector": "^0.11",
        "squizlabs/php_codesniffer": "^3.0",
        "szepeviktor/phpstan-wordpress": "^0.7",
        "johnpbloch/wordpress": ">=5.5"
    },
    "autoload": {
        "psr-4": {
            "PoP\\HooksWP\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoP\\HooksWP\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse"
    },
    "extra": {
        "wordpress-install-dir": "vendor/wordpress/wordpress",
        "branch-alias": {
            "dev-master": "0.9-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
