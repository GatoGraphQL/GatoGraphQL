{
    "name": "getpop/dom-crawler",
    "type": "library",
    "description": "Crawl the DOM (the HTML Document Object Model)",
    "keywords": ["Gato", "GatoGraphQL", "GraphQL", "PHP", "Gato", "GatoGraphQL", "dom-crawler"],
    "homepage": "https://github.com/getpop/dom-crawler",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "require": {
        "php": "^8.1",
        "getpop/component-model": "^0.11",
        "masterminds/html5": "^2.7",
        "symfony/dom-crawler": "^6.0",
		"symfony/css-selector": "^6.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^10.2",
        "rector/rector": "^0.18",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "PoP\\DOMCrawler\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoP\\DOMCrawler\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.11-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
