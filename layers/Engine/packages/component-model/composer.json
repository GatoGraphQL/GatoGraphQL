{
    "name": "getpop/component-model",
    "autoload": {
        "psr-4": {
            "PoP\\ComponentModel\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoP\\ComponentModel\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.9-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
