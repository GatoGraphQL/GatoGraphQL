{
    "name": "getpop/component-model",
    "type": "library",
    "description": "Component model for PoP, over which the component-based architecture is based",
    "keywords": ["PoP", "component-model"],
    "homepage": "https://github.com/getpop/component-model",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "composer/semver": "^3.2",
        "getpop/definitions": "^0.8",
        "getpop/field-query": "^0.8",
        "jrfnl/php-cast-to-type": "^2.0",
        "league/pipeline": "^1.0",
        "psr/simple-cache": "^1.0",
        "symfony/cache": "^5.1",
        "symfony/expression-language": "^5.1"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.76",
        "phpunit/phpunit": ">=9.3",
        "rector/rector": "^0.10",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "PoP\\ComponentModel\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoP\\ComponentModel\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.8-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
