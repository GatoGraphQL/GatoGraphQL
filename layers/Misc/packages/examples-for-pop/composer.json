{
    "name": "leoloso/examples-for-pop",
    "type": "library",
    "description": "Example implementations to demonstrate PoP",
    "keywords": ["PoP", "examples-for-pop"],
    "homepage": "https://github.com/leoloso/examples-for-pop",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "graphql-by-pop/graphql-server": "^0.7.12",
        "pop-schema/translate-directive": "^0.7.12",
        "pop-schema/media": "^0.7.12",
        "pop-schema/cdn-directive": "^0.7.12"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12, <0.12.70",
        "phpunit/phpunit": ">=9.3",
        "rector/rector": "^0.9",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Leoloso\\ExamplesForPoP\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Leoloso\\ExamplesForPoP\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse",
        "preview-code-downgrade": "rector process src --config=rector-downgrade-code.php --dry-run --ansi"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.8-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
