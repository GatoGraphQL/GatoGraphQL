{
    "name": "getpop/api-graphql",
    "type": "library",
    "description": "Extended/Upgraded implementation of GraphQL, implemented on PHP, based on the PoP API",
    "keywords": ["PoP", "api-graphql"],
    "homepage": "https://github.com/getpop/api-graphql",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "getpop/api-mirrorquery": "^0.7.13",
        "getpop/migrate-api-graphql": "^0.7.13"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.76",
        "phpunit/phpunit": ">=9.3",
        "rector/rector": "^0.9",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "PoP\\GraphQLAPI\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoP\\GraphQLAPI\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse",
        "preview-code-downgrade": "rector process src --config=rector-downgrade-code.php --dry-run --ansi"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.8-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
