{
    "name": "pop-api/api",
    "type": "library",
    "description": "Component-based API",
    "keywords": ["GraphQL", "PHP", "Gato", "GatoGraphQL", "api"],
    "homepage": "https://github.com/PoP-PoPAPI/api",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "require": {
        "php": "^8.1",
        "getpop/engine": "^0.11"
    },
    "require-dev": {
        "getpop/access-control": "^0.11",
        "getpop/cache-control": "^0.11",
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^10.2",
        "rector/rector": "^0.17.8",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "suggest": {
        "getpop/access-control": "Integration with Access Control",
        "getpop/cache-control": "Integration with Cache Control"
    },
    "autoload": {
        "psr-4": {
            "PoPAPI\\API\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoPAPI\\API\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.11-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
