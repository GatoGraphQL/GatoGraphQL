{
    "name": "getpop/api",
    "type": "library",
    "description": "Component-based API",
    "keywords": ["PoP", "api"],
    "homepage": "https://github.com/getpop/api",
    "license": "MIT",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "getpop/engine": "dev-master",
        "getpop/migrate-api": "dev-master"
    },
    "require-dev": {
        "getpop/access-control": "dev-master",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": ">=9.3",
        "rector/rector": "^0.9",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "suggest": {
        "getpop/access-control": "Integration with Access Control"
    },
    "autoload": {
        "psr-4": {
            "PoP\\API\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoP\\API\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse -c phpstan.neon.dist",
        "preview-code-downgrade": "rector process src --config=rector-downgrade-code.php --dry-run --ansi"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
