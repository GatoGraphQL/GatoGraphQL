{
    "name": "pop-api/api-endpoints-for-wp",
    "type": "library",
    "description": "Add pretty permalinks for the PoP API endpoints, for WordPress",
    "keywords": ["GraphQL", "PHP", "Gato", "GatoGraphQL", "api-endpoints-for-wp"],
    "homepage": "https://github.com/PoP-PoPAPI/api-endpoints-for-wp",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "php": "^8.1",
        "pop-api/api-endpoints": "^0.11"
    },
    "require-dev": {
        "johnpbloch/wordpress": ">=5.5",
        "phpunit/phpunit": "^9.5",
        "rector/rector": "^0.15",
        "squizlabs/php_codesniffer": "^3.6",
        "szepeviktor/phpstan-wordpress": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "PoPAPI\\APIEndpointsForWP\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoPAPI\\APIEndpointsForWP\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse"
    },
    "extra": {
        "wordpress-install-dir": "vendor/wordpress/wordpress",
        "branch-alias": {
            "dev-master": "0.11-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
