{
    "name": "pop-api/api-clients",
    "type": "library",
    "description": "Utilities for implementing API clients",
    "keywords": ["GraphQL", "PHP", "Gato", "GatoGraphQL", "api-clients"],
    "homepage": "https://github.com/PoP-PoPAPI/api-clients",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "php": "^8.1",
        "pop-api/api-endpoints": "^0.11"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^10.2",
        "rector/rector": "^0.17.8",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "PoPAPI\\APIClients\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoPAPI\\APIClients\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.11-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
