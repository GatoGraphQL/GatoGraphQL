{
    "name": "pop-api/api-mirrorquery",
    "type": "library",
    "description": "Mirror the query in the API response",
    "keywords": ["GraphQL", "PHP", "Gato", "GatoGraphQL", "api-mirrorquery"],
    "homepage": "https://github.com/PoP-PoPAPI/api-mirrorquery",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "require": {
        "php": "^8.1",
        "pop-api/api": "^0.11"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^9.5",
        "rector/rector": "^0.17",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "PoPAPI\\APIMirrorQuery\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoPAPI\\APIMirrorQuery\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.11-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
