{
    "name": "pop-sites-wassup/post-mutations",
    "type": "library",
    "description": "Adds support for post mutations",
    "keywords": ["PoP", "post-mutations"],
    "homepage": "https://github.com/PoPSites-Wassup/post-mutations",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "pop-sites-wassup/custompost-mutations": "^0.7.13",
        "pop-schema/post-mutations": "^0.7.13"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.76",
        "phpunit/phpunit": ">=9.3",
        "rector/rector": "^0.9",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "PoPSitesWassup\\PostMutations\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoPSitesWassup\\PostMutations\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse",
        "preview-code-downgrade": "rector process src --config=rector-downgrade-code.php --dry-run --ansi"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.8-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
