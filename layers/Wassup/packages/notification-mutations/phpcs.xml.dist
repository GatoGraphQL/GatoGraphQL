<?xml version="1.0"?>
<ruleset name="notification-mutations">
    <description>The coding standard of notification-mutations package</description>
    <arg value="p" />

    <config name="ignore_warnings_on_exit" value="1" />

    <!-- Don't show a warning on the line length -->
    <rule ref="Generic.Files.LineLength.MaxExceeded">
        <severity>0</severity>
    </rule>
    <rule ref="Generic.PHP.DisallowRequestSuperglobal"/>

    <arg name="colors" />
    <arg value="s" />

    <!-- Use the PSR12 Standard-->
    <rule ref="PSR12" />
</ruleset>
